<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cities.sample.mobile.bpal.ru.tpproviderdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.bpal.mobile.tpproviderdemo.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="ru.bpal.mobile.tpproviderdemo.data.provider"
            android:name="ru.bpal.mobile.tpproviderdemo.data.CitiesContentProvider"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/provider_label"
            />

    </application>

</manifest>